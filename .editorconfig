# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# JS
[*.{js,json}]
indent_style = space
indent_size = 2

# CSS
[*.css]
indent_style = tab
indent_size = 2

# Yaml
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ini
[*.ini]
indent_style = space
indent_size = 2

# conf
[*.conf]
indent_style = space
indent_size = 2

# python
[*.py]
indent_style = space
indent_size = 4

# PHP
[*.{php,phtml,html}]
indent_style = space
indent_size = 2

# shell
[*.sh]
indent_style = space
indent_size = 4

# xml
[*.xml]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
